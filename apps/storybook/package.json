{
  "name": "@rozsival/storybook",
  "version": "0.0.0",
  "private": true,
  "description": "Component showcase using Storybook",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prebuild": "del .eslintcache storybook-static tsconfig.tsbuildinfo",
    "build": "storybook build -c config",
    "cleanup": "del .eslintcache storybook-static .turbo node_modules tsconfig.tsbuildinfo",
    "dev": "storybook dev -c config -p 6006",
    "format": "prettier --ignore-path .prettierignore --check \"./**/*.{js,json,md,mdx,ts,tsx}\"",
    "format:fix": "pnpm run format --write",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "ts": "tsc --build"
  },
  "dependencies": {
    "@rozsival/theme": "workspace:*",
    "@rozsival/ui": "workspace:*",
    "lucide-react": "0.562.0",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@storybook/react": "10.2.0",
    "@storybook/react-vite": "10.2.0",
    "@tailwindcss/vite": "4.1.18",
    "@testing-library/dom": "10.4.1",
    "@types/react": "19.2.9",
    "@types/react-dom": "19.1.4",
    "@vitejs/plugin-react": "4.5.2",
    "storybook": "10.2.0",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "vite": "6.0.11"
  }
}
