{
  "name": "@rozsival/ui",
  "version": "0.0.0",
  "private": true,
  "description": "Shadcn-inspired component library built on Radix UI primitives",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./button": {
      "types": "./dist/components/button.d.ts",
      "import": "./dist/components/button.js"
    },
    "./card": {
      "types": "./dist/components/card.d.ts",
      "import": "./dist/components/card.js"
    },
    "./input": {
      "types": "./dist/components/input.d.ts",
      "import": "./dist/components/input.js"
    },
    "./navigation": {
      "types": "./dist/components/navigation.d.ts",
      "import": "./dist/components/navigation.js"
    },
    "./textarea": {
      "types": "./dist/components/textarea.d.ts",
      "import": "./dist/components/textarea.js"
    },
    "./link": {
      "types": "./dist/components/link.d.ts",
      "import": "./dist/components/link.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "del dist tsconfig.build.tsbuildinfo",
    "build": "tsc --build tsconfig.build.json",
    "cleanup": "del .eslintcache .turbo tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo dist node_modules",
    "fix": "turbo run ts format:fix lint:fix --no-daemon",
    "format": "prettier --ignore-path .prettierignore --check \"./**/*.{js,json,md,ts,tsx}\"",
    "format:fix": "pnpm run format --write",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "qa": "turbo run ts format lint --no-daemon",
    "test": "vitest run",
    "test:watch": "vitest",
    "ts": "tsc --build"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-navigation-menu": "1.2.14",
    "@radix-ui/react-slot": "1.2.4",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.562.0",
    "tailwind-merge": "3.3.0"
  },
  "devDependencies": {
    "@rozsival/theme": "workspace:*",
    "@types/react": "19.2.9",
    "react": "19.2.3",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "peerDependencies": {
    "@rozsival/theme": "workspace:*",
    "react": "19.2.3"
  }
}
