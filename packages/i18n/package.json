{
  "name": "@rozsival/i18n",
  "version": "0.0.0",
  "private": true,
  "description": "Internationalization with react-intl for server and client components",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    },
    "./messages/*": "./src/messages/*"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "del dist tsconfig.build.tsbuildinfo",
    "build": "tsc --build tsconfig.build.json",
    "cleanup": "del .eslintcache .turbo tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo dist node_modules",
    "fix": "turbo run ts format:fix lint:fix --no-daemon",
    "format": "prettier --ignore-path .prettierignore --check \"./**/*.{js,json,md,ts,tsx}\"",
    "format:fix": "pnpm run format --write",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "qa": "turbo run ts format lint --no-daemon",
    "test": "vitest run",
    "test:watch": "vitest",
    "ts": "tsc --build"
  },
  "dependencies": {
    "@formatjs/intl": "4.1.2",
    "@formatjs/intl-localematcher": "0.8.1",
    "intl-messageformat": "11.1.2",
    "lodash-es": "4.17.23",
    "negotiator": "1.0.0",
    "react-intl": "8.1.3"
  },
  "devDependencies": {
    "@types/lodash-es": "4.17.12",
    "@types/negotiator": "0.6.4",
    "@types/react": "19.2.14",
    "react": "19.2.4",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "peerDependencies": {
    "react": "19.2.x"
  }
}
