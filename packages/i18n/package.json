{
  "name": "@rozsival/i18n",
  "version": "0.0.0",
  "private": true,
  "description": "Internationalization with react-intl for server and client components",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    },
    "./messages/*": "./src/messages/*"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src/messages"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@formatjs/intl-localematcher": "0.7.0",
    "negotiator": "1.0.0",
    "react-intl": "8.1.1"
  },
  "peerDependencies": {
    "react": "19.2.3"
  },
  "devDependencies": {
    "@rozsival/typescript-config": "workspace:*",
    "@types/negotiator": "0.6.3",
    "@types/react": "19.2.9",
    "react": "19.2.3",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
