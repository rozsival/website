{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js Application Configuration",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "plugins": [{ "name": "next" }],
    "allowJs": true
  }
}
