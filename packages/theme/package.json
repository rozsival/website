{
  "name": "@rozsival/theme",
  "version": "0.0.0",
  "private": true,
  "description": "Theming system with dark/light mode support",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && cp src/styles.css dist/styles.css",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "clsx": "2.1.1",
    "tailwind-merge": "3.3.0"
  },
  "peerDependencies": {
    "react": "19.2.3"
  },
  "devDependencies": {
    "@rozsival/typescript-config": "workspace:*",
    "@types/react": "19.2.9",
    "react": "19.2.3",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
