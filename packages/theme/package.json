{
  "name": "@rozsival/theme",
  "version": "0.0.0",
  "private": true,
  "description": "Theming system with dark/light mode support",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "del dist tsconfig.build.tsbuildinfo",
    "build": "tsc --build tsconfig.build.json",
    "postbuild": "pnpx cpy-cli --flat src/styles.css dist",
    "cleanup": "del .eslintcache .turbo tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo dist node_modules",
    "fix": "turbo run ts format:fix lint:fix --no-daemon",
    "format": "prettier --ignore-path .prettierignore --check \"./**/*.{js,json,md,ts,tsx}\"",
    "format:fix": "pnpm run format --write",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "qa": "turbo run ts format lint --no-daemon",
    "test": "vitest run",
    "test:watch": "vitest",
    "ts": "tsc --build"
  },
  "dependencies": {
    "clsx": "2.1.1",
    "tailwind-merge": "3.3.0"
  },
  "devDependencies": {
    "@types/react": "19.2.9",
    "react": "19.2.3",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "peerDependencies": {
    "react": "19.2.3"
  }
}
